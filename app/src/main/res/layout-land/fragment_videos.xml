<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <import type="android.support.v7.widget.LinearLayoutManager" />

        <variable
            name="viewModel"
            type="com.testapp.testappkotlin.presentation.videolist.VideosViewModel" />
    </data>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:disableAnimations="@{true}"
        app:itemBinding="@{viewModel.onItemBind}"
        app:items="@{viewModel.items}"
        app:layoutManager="@{LayoutManagers.linear(LinearLayoutManager.HORIZONTAL,false)}" />

</layout>